<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical"
    android:background="@drawable/item_task_background">

    <!-- Tekst -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/taskTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tytuł zadania"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary" />

        <TextView
            android:id="@+id/taskDeadlineTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do: 01.01.2025 10:00"
            android:textSize="14sp"
            android:textColor="?android:textColorSecondary" />
    </LinearLayout>

    <!-- Przyciski -->
    <ImageButton
        android:id="@+id/deleteTaskButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_button_red"
        android:src="@drawable/ic_delete"
        android:scaleType="center"
        android:contentDescription="Usuń"
        android:layout_marginStart="12dp"
        android:tint="@android:color/white"
        android:tooltipText="Usuń zadanie" />
</LinearLayout>
